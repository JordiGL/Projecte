<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="controlador.activity.AdminSettingsActivity">

    <FrameLayout
        android:id="@+id/admin_settings_fragment_container"
        android:name="FavoritesFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/settings_bg_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePasswordAdmin">

    </FrameLayout>

    <Button
        android:id="@+id/btnChangePasswordAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/text_canviar_clau_settings"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:background="@drawable/principal_button_settings_top_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/description_canvi_de_clau" />

    <Button
        android:id="@+id/btnChangeVoiceAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_canviar_veu_settings"
        android:textColor="@color/white"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnChangePasswordAdmin"
        app:layout_constraintStart_toEndOf="@+id/btnChangePasswordAdmin"
        app:layout_constraintTop_toTopOf="@+id/btnChangePasswordAdmin"
        android:background="@drawable/button_middle_top_round"
        android:contentDescription="@string/description_canvi_de_veu" />

    <Button
        android:id="@+id/btnDeleteAccountAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_middle_top_round"
        android:contentDescription="@string/description_canvi_de_clau"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:text="@string/text_eliminar_compte_settings"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btnChangeVoiceAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnChangePasswordAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>