<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="controlador.fragment.UserControlFragment">

    <ImageView
        android:id="@+id/control_second_bg_user"
        android:layout_width="@dimen/user_control_second_bg_width_land"
        android:layout_height="@dimen/user_control_second_bg_height_land"
        android:contentDescription="@string/user_second_background_description"
        android:src="@drawable/control_bg_second_land"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/control_first_bg_user"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/control_first_bg_user"
        android:layout_width="@dimen/user_control_first_bg_width_land"
        android:layout_height="@dimen/user_control_first_bg_height_land"
        android:contentDescription="@string/user_first_background_description"
        android:src="@drawable/control_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/icon_control_layout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/control_dimen_basic_margin"
        android:layout_marginBottom="@dimen/control_dimen_basic_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/control_second_bg_user"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/control_second_bg_user">

        <ImageButton
            android:layout_width="@dimen/control_dimen_button"
            android:layout_height="@dimen/control_dimen_button"
            android:layout_marginBottom="@dimen/control_dimen_basic_margin"
            android:layout_weight=".45"
            android:contentDescription="@string/user_add_page_description"
            android:background="@drawable/button_middle_top_round"
            android:src="@drawable/ic_action_add_screen"/>

        <ImageButton
            android:layout_width="@dimen/control_dimen_button"
            android:layout_height="@dimen/control_dimen_button"
            android:layout_weight=".45"
            android:contentDescription="@string/user_control_icons_description"
            android:background="@drawable/button_middle_bottom_round"
            android:src="@drawable/ic_action_icon_number"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/control_dimen_basic_margin"
        android:layout_marginBottom="@dimen/control_dimen_basic_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/control_first_bg_user"
        app:layout_constraintStart_toStartOf="@+id/control_first_bg_user"
        app:layout_constraintTop_toTopOf="@+id/control_first_bg_user">


        <ImageButton
            android:layout_width="@dimen/control_dimen_large_button_land"
            android:layout_height="@dimen/control_dimen_button"
            android:layout_marginBottom="@dimen/control_dimen_basic_margin"
            android:layout_weight=".45"
            android:contentDescription="@string/user_control_stop_description"
            android:background="@drawable/button_top_right"
            android:src="@drawable/ic_action_stop"/>

        <ImageButton
            android:layout_width="@dimen/control_dimen_large_button_land"
            android:layout_height="@dimen/control_dimen_button"
            android:layout_weight=".45"
            android:contentDescription="@string/user_control_play_description"
            android:background="@drawable/button_bottom_right"
            android:src="@drawable/ic_action_play"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>